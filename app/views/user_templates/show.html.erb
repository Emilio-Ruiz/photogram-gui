<h1><%= @the_user.inspect %></h1>

<dl>
  <dt>ID</dt>

  <dd><%= @the_user.id%></dd>

  <dt>Edit user</dt>

  <dd>form goes here</dd>

  <form action="/insert_user_record">
  <label for="Username">Username</label>
  <input id="Username" type="text" name="username" placeholder="Enter a username..." >Username</input>

  <button type="submit" value="<%= @the_user.username%>">Update user</button>
  </form>
</dl>


<h2>Own photos (<%= @the_user.own_photos.size %>) </h2>

<table border="1">

  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th> </th>
  </tr>

  <% @the_user.own_photos.each do |a_photo| %>

  <tr>
    <td>
      <img src="<%= a_photo.image %>">
    </td>
    <td>
      <%#= #User.where({ :id => a_photo.owner_id}).at(0).username %>
      <%= a_photo.poster.username %>
    </td>
    <td><% a_photo.image%></td>
    <td><%= a_photo.created_at %></td>
    <td>Show details</td>
  </tr>
<% end %>
</table>
